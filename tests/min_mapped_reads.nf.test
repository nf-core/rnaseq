nextflow_pipeline {

    name "Test pipeline with a minimum mapped read threshold of 90"
    script "../main.nf"
    tag "RNASEQ"
    tag "PIPELINE"

    test("Params: --min_mapped_reads 90") {

        when {
            params {
                outdir = "$outputDir"
                min_mapped_reads = 90
            }
        }

        then {
            assert workflow.success
        }
    }
}
