nextflow_pipeline {

    name "Test Workflow main.nf"
    script "main.nf"
    options "-profile test"
    tag "pipeline"

    test("HISAT2 (Skip QC) (GSE110004)") {

        when {
            params {
                outdir  = "$outputDir"
                aligner = "hisat2"
                skip_qc = true
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert snapshot(path("$outputDir/pipeline_info/software_versions.yml")).match("software_versions") },
                { assert snapshot(path("$outputDir/pipeline_info/samplesheet.valid.csv")).match("samplesheet") },
                { assert snapshot(path("$outputDir/bbsplit/").list()).match("bbsplit") },
                { assert !new File("$outputDir/fastqc/RAP1_IAA_30M_REP1_1_fastqc.html").exists() },
                { assert !new File("$outputDir/fastqc/RAP1_IAA_30M_REP1_2_fastqc.html").exists() },
                { assert !new File("$outputDir/fastqc/RAP1_UNINDUCED_REP1_fastqc.html").exists() },
                { assert !new File("$outputDir/fastqc/RAP1_UNINDUCED_REP2_fastqc.html").exists() },
                { assert !new File("$outputDir/fastqc/WT_REP1_1_fastqc.html").exists() },
                { assert !new File("$outputDir/fastqc/WT_REP1_2_fastqc.html").exists() },
                { assert !new File("$outputDir/fastqc/WT_REP2_1_fastqc.html").exists() },
                { assert !new File("$outputDir/fastqc/WT_REP2_2_fastqc.html").exists() },
                { assert snapshot(path("$outputDir/hisat2/bigwig/RAP1_IAA_30M_REP1.forward.bigWig"),
                                  path("$outputDir/hisat2/bigwig/RAP1_IAA_30M_REP1.reverse.bigWig"),
                                  path("$outputDir/hisat2/bigwig/RAP1_UNINDUCED_REP1.forward.bigWig"),
                                  path("$outputDir/hisat2/bigwig/RAP1_UNINDUCED_REP1.reverse.bigWig"),
                                  path("$outputDir/hisat2/bigwig/RAP1_UNINDUCED_REP2.forward.bigWig"),
                                  path("$outputDir/hisat2/bigwig/RAP1_UNINDUCED_REP2.reverse.bigWig"),
                                  path("$outputDir/hisat2/bigwig/WT_REP1.forward.bigWig"),
                                  path("$outputDir/hisat2/bigwig/WT_REP1.reverse.bigWig"),
                                  path("$outputDir/hisat2/bigwig/WT_REP2.forward.bigWig"),
                                  path("$outputDir/hisat2/bigwig/WT_REP2.reverse.bigWig")).match("hisat2/bigwig/") },
                { assert snapshot(path("$outputDir/hisat2/log/").list()).match("hisat2/log/") },
                { assert snapshot(path("$outputDir/hisat2/samtools_stats/").list()).match("hisat2/samtools_stats/") },
                { assert snapshot(path("$outputDir/multiqc/hisat2/multiqc_data/multiqc_cutadapt.txt"),
                                  path("$outputDir/multiqc/hisat2/multiqc_data/multiqc_fastqc.txt"),
                                  path("$outputDir/multiqc/hisat2/multiqc_data/multiqc_general_stats.txt"),
                                  path("$outputDir/multiqc/hisat2/multiqc_data/multiqc_hisat2.txt"),
                                  path("$outputDir/multiqc/hisat2/multiqc_data/multiqc_picard_dups.txt"),
                                  path("$outputDir/multiqc/hisat2/multiqc_data/multiqc_samtools_flagstat.txt"),
                                  path("$outputDir/multiqc/hisat2/multiqc_data/multiqc_samtools_idxstats.txt"),
                                  path("$outputDir/multiqc/hisat2/multiqc_data/multiqc_samtools_stats.txt"),
                                  path("$outputDir/multiqc/hisat2/multiqc_data/picard_histogram.txt")).match("multiqc") },
                { assert snapshot(path("$outputDir/salmon/salmon.merged.gene_counts.tsv"),
                                  path("$outputDir/salmon/salmon.merged.transcript_counts.tsv"),
                                  path("$outputDir/salmon/salmon_tx2gene.tsv")).match("salmon") },
                { assert new File("$outputDir/salmon/RAP1_IAA_30M_REP1/quant.sf").exists() },
                { assert new File("$outputDir/salmon/RAP1_IAA_30M_REP1/quant.genes.sf").exists() },
                { assert new File("$outputDir/salmon/RAP1_UNINDUCED_REP1/quant.sf").exists() },
                { assert new File("$outputDir/salmon/RAP1_UNINDUCED_REP1/quant.genes.sf").exists() },
                { assert new File("$outputDir/salmon/RAP1_UNINDUCED_REP2/quant.sf").exists() },
                { assert new File("$outputDir/salmon/RAP1_UNINDUCED_REP2/quant.genes.sf").exists() },
                { assert new File("$outputDir/salmon/WT_REP1/quant.sf").exists() },
                { assert new File("$outputDir/salmon/WT_REP1/quant.genes.sf").exists() },
                { assert new File("$outputDir/salmon/WT_REP2/quant.sf").exists() },
                { assert new File("$outputDir/salmon/WT_REP2/quant.genes.sf").exists() },
                { assert new File("$outputDir/hisat2/picard_metrics/RAP1_IAA_30M_REP1.markdup.sorted.MarkDuplicates.metrics.txt").exists() },
                { assert new File("$outputDir/hisat2/picard_metrics/RAP1_UNINDUCED_REP1.markdup.sorted.MarkDuplicates.metrics.txt").exists() },
                { assert new File("$outputDir/hisat2/picard_metrics/RAP1_UNINDUCED_REP2.markdup.sorted.MarkDuplicates.metrics.txt").exists() },
                { assert new File("$outputDir/hisat2/picard_metrics/WT_REP1.markdup.sorted.MarkDuplicates.metrics.txt").exists() },
                { assert new File("$outputDir/hisat2/picard_metrics/WT_REP2.markdup.sorted.MarkDuplicates.metrics.txt").exists() },
                { assert new File("$outputDir/hisat2/RAP1_IAA_30M_REP1.markdup.sorted.bam").exists() },
                { assert new File("$outputDir/hisat2/RAP1_IAA_30M_REP1.markdup.sorted.bam.bai").exists() },
                { assert new File("$outputDir/hisat2/WT_REP1.markdup.sorted.bam").exists() },
                { assert new File("$outputDir/hisat2/WT_REP1.markdup.sorted.bam.bai").exists() },
                { assert new File("$outputDir/hisat2/RAP1_UNINDUCED_REP1.markdup.sorted.bam").exists() },
                { assert new File("$outputDir/hisat2/RAP1_UNINDUCED_REP1.markdup.sorted.bam.bai").exists() },
                { assert new File("$outputDir/hisat2/WT_REP2.markdup.sorted.bam").exists() },
                { assert new File("$outputDir/hisat2/WT_REP2.markdup.sorted.bam.bai").exists() },
                { assert new File("$outputDir/hisat2/RAP1_UNINDUCED_REP2.markdup.sorted.bam").exists() },
                { assert new File("$outputDir/hisat2/RAP1_UNINDUCED_REP2.markdup.sorted.bam.bai").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_IAA_30M_REP1.gene.abundance.txt").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_UNINDUCED_REP1.gene.abundance.txt").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_UNINDUCED_REP2.gene.abundance.txt").exists() },
                { assert new File("$outputDir/hisat2/stringtie/WT_REP1.gene.abundance.txt").exists() },
                { assert new File("$outputDir/hisat2/stringtie/WT_REP2.gene.abundance.txt").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_IAA_30M_REP1.coverage.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_UNINDUCED_REP1.coverage.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_UNINDUCED_REP2.coverage.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/WT_REP1.coverage.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/WT_REP2.coverage.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_IAA_30M_REP1.transcripts.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_UNINDUCED_REP1.transcripts.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/RAP1_UNINDUCED_REP2.transcripts.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/WT_REP1.transcripts.gtf").exists() },
                { assert new File("$outputDir/hisat2/stringtie/WT_REP2.transcripts.gtf").exists() },
                { assert new File("$outputDir/trimgalore/RAP1_IAA_30M_REP1_1.fastq.gz_trimming_report.txt").exists() },
                { assert new File("$outputDir/trimgalore/RAP1_IAA_30M_REP1_2.fastq.gz_trimming_report.txt").exists() },
                { assert new File("$outputDir/trimgalore/RAP1_UNINDUCED_REP1.fastq.gz_trimming_report.txt").exists() },
                { assert new File("$outputDir/trimgalore/RAP1_UNINDUCED_REP2.fastq.gz_trimming_report.txt").exists() },
                { assert new File("$outputDir/trimgalore/WT_REP1_1.fastq.gz_trimming_report.txt").exists() },
                { assert new File("$outputDir/trimgalore/WT_REP1_2.fastq.gz_trimming_report.txt").exists() },
                { assert new File("$outputDir/trimgalore/WT_REP2_1.fastq.gz_trimming_report.txt").exists() },
                { assert new File("$outputDir/trimgalore/WT_REP2_2.fastq.gz_trimming_report.txt").exists() }                                                    
            )
        }

    }

}
